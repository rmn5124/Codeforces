# Codeforces
//https://codeforces.com/contest/1311/problem/A

#include<bits/stdc++.h>
using namespace std;
#define tst               long t;cin>>t;while(t--)
#define rep(i,a,n)         for(int i=a;i<n;i++)
#define ull               unsigned long long int
#define ll                long long int
 
int main(){
   ios_base::sync_with_stdio(false);
   cin.tie(NULL);cout.tie(NULL);
 tst{
   ll a,b;cin>>a>>b;
    if(a==b) cout<<"0"<<endl;
    //else if(b-a==1) cout<<"1"<<endl;
   else if(a<b){
        if(!(1&(b-a))) cout<<"2"<<endl;
        else cout<<"1"<<endl;
    }
    else{
             if((1&(a-b))) cout<<"2"<<endl;
        else cout<<"1"<<endl;
    }
   
  
 }
return 0;   
}
