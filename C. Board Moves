# Codeforces

//https://codeforces.com/contest/1353/problem/C

#include <bits/stdc++.h>
#define ll long long int
using namespace std;

int main() {
    ll t;
    cin>>t;
    while(t--){
      ll n;
      cin>>n;
      ll k=n/2;
      ll res=((k*(k+1)*(2*k+1))/6)*8;
      cout<<res<<"\n";
    } 
	return 0;
}
