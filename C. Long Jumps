 int main(){

  tst {
    	ll n;
    	cin>>n;
    	ll a[n];
    	ll var[n];
    	ll res[n];
    	for(ll i=0;i<n;i++){
    	cin>>a[i];
    	var[i]=a[i];}
    	for(ll i=0;i<n;i++){
    		
    		if((i+a[i])<n){
    		    var[i+a[i]] =max(var[i+a[i]],var[i]+a[i+a[i]]);}
    	}
    	sort(var,var+n);
    	cout<<var[n-1]<<endl;
    }
     }
